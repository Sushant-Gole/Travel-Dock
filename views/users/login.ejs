<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-6 offset-3">
        <h4>Welcome back! Your next destination awaits</h4>
        <form action="/login" method="post" class="needs-validation mt-3" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" type="text" id="username" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" type="password" id="password" class="form-control" required>
            </div>
            <button class="btn btn-outline-success mt-3 col-2 offset-5">Login</button>
        </form>
    </div>
</div>